<h1>List of <%= @cast_list.first.role.capitalize %>s</h1>

<a href="http://localhost:3000/<%= @cast_list.first.role%>s/new_form">Add a New <%= @cast_list.first.role.capitalize %></a>

<table>
  <tr>
    <th>Picture</th>
    <th>Name</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @cast_list.each do |cmember| %>
  <tr>
    <td>
      <img src="<%= cmember.image_url %>" width="80">
    </td>
    <td>
      <%= cmember.name %>
    </td>
    <td>
      <a href="http://localhost:3000/<%= cmember.role %>s/<%= cmember.id %>">Show</a>
    </td>
    <td>
      <a href="http://localhost:3000/<%= cmember.role %>s/<%= cmember.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/delete_<%= cmember.role %>/<%= cmember.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>

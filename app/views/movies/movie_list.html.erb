<h1>List of Movies</h1>

<a href="http://localhost:3000/movies/new_form">Add a New Movie</a>

<table>
  <tr>
    <th>Picture</th>
    <th>Name</th>
    <th>Year</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @movies_list.each do |cmember| %>
  <tr>
    <td>
      <img src="<%= cmember.image_url %>" width="80">
    </td>
    <td>
      <%= cmember.title %>
    </td>
    <td>
      <%= cmember.year %>
    </td>
    <td>
      <a href="http://localhost:3000/movies/<%= cmember.id %>">Show</a>
    </td>
    <td>
      <a href="http://localhost:3000/movies/<%= cmember.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/delete_movie/<%= cmember.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
